# =============================================================================
# PRODUCTION КОНФИГУРАЦИЯ (для docker-compose.prod.yml)
# =============================================================================
# Этот файл содержит настройки для production развертывания
# Использование: cp env.production.example .env

# =============================================================================
# ОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ
# =============================================================================

# Telegram Bot Token
TELEGRAM_TOKEN=your_telegram_bot_token_here

# OpenRouter API Key
OPENROUTER_API_KEY=your_openrouter_api_key_here

# =============================================================================
# БАЗА ДАННЫХ
# =============================================================================

DATABASE_URL=postgresql+asyncpg://aidd_user:aidd_password@postgres:5432/aidd_db
POSTGRES_USER=aidd_user
POSTGRES_PASSWORD=your_strong_postgres_password_here
POSTGRES_DB=aidd_db

# =============================================================================
# НАСТРОЙКИ LLM
# =============================================================================

OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
MODEL_NAME=openai/gpt-4o-mini:free
SYSTEM_PROMPT_FILE=prompts/system.txt

# =============================================================================
# НАСТРОЙКИ БОТА
# =============================================================================

MAX_HISTORY_MESSAGES=20
TEMPERATURE=0.7

# =============================================================================
# ЛОГИРОВАНИЕ
# =============================================================================

LOG_LEVEL=INFO

# =============================================================================
# CORS НАСТРОЙКИ (для production)
# =============================================================================

# Добавьте ваш production домен и порты
# Пример: CORS_ORIGINS=http://your-domain.com:3001,http://your-domain.com,https://your-domain.com
CORS_ORIGINS=http://localhost:5173,http://aitest.karasov.net:5173,http://aitest.karasov.net:3000,http://localhost:3000,http://aitest.karasov.net:3001,http://localhost:3001,http://83.147.246.172:3001

# =============================================================================
# VITE НАСТРОЙКИ (Frontend)
# =============================================================================

# Production API endpoint
# Замените на ваш IP или домен
VITE_API_BASE_URL=http://83.147.246.172:8001/api/v1

# Разрешенные хосты для Vite dev сервера
# Добавьте ваш production домен
VITE_ALLOWED_HOSTS=aitest.karasov.net,localhost,.localhost

