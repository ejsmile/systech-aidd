# =============================================================================
# ЛОКАЛЬНАЯ КОНФИГУРАЦИЯ (для docker-compose.registry.yml)
# =============================================================================
# Этот файл содержит настройки для локального тестирования через registry образы
# Использование: cp env.local.example .env

# =============================================================================
# ОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ
# =============================================================================

# Telegram Bot Token
TELEGRAM_TOKEN=your_telegram_bot_token_here

# OpenRouter API Key
OPENROUTER_API_KEY=your_openrouter_api_key_here

# =============================================================================
# БАЗА ДАННЫХ
# =============================================================================

DATABASE_URL=postgresql+asyncpg://aidd_user:aidd_password@postgres:5432/aidd_db
POSTGRES_USER=aidd_user
POSTGRES_PASSWORD=aidd_password
POSTGRES_DB=aidd_db

# =============================================================================
# НАСТРОЙКИ LLM
# =============================================================================

OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
MODEL_NAME=openai/gpt-4o-mini:free
SYSTEM_PROMPT_FILE=prompts/system.txt

# =============================================================================
# НАСТРОЙКИ БОТА
# =============================================================================

MAX_HISTORY_MESSAGES=20
TEMPERATURE=0.7

# =============================================================================
# ЛОГИРОВАНИЕ
# =============================================================================

LOG_LEVEL=INFO

# =============================================================================
# CORS НАСТРОЙКИ (для локального тестирования)
# =============================================================================

# Для локального тестирования включаем localhost порты
CORS_ORIGINS=http://localhost:5173,http://localhost:8000,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:8000

# =============================================================================
# VITE НАСТРОЙКИ (Frontend)
# =============================================================================

# Локальный API endpoint для тестирования
VITE_API_BASE_URL=http://localhost:8000/api/v1

# Разрешенные хосты для Vite dev сервера (для локального тестирования)
VITE_ALLOWED_HOSTS=localhost,.localhost,127.0.0.1

